extends layout

block content

  .row.column
    p.All Books
  .row.small-up-1.medium-up-2.large-up-3
    for book in allBooks
      .column
        .callout
          p= book.title
          p
            img(src=book.cover, alt=book.title)
          p.lead author name
          p.subheader=book.genre
          p.subheader=book.description
