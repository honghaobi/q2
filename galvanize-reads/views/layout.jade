doctype html
html
  head
    meta(charset='utf-8')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/foundation/6.2.0/foundation.min.css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,600,300,300italic,400italic,800,800italic,700italic,600italic|Lora:400,400italic,700,700italic', rel='stylesheet', type='text/css')
    link(rel='stylesheet', type='text/css', href='stylesheets/style.css')
    title galvanize reads
  body
    img.bg(src='/images/bg.jpg', alt='books')
    .title-bar(data-responsive-toggle='galvanizeMenu', data-hide-for='small')
      button.menu-icon(type='button', data-toggle='')
      .title-bar-title Galvanize Reads
    #galvanizeMenu.top-bar
      .top-bar-left
        ul.menu(data-responsive-menu='accordion')
          li.menu-text Category Selection:
          li
            a(href='/authors') Authors
          li
            a(href='/books') Books
    br
    .row
      .medium-7.large-6.columns
        h1.quote
          | “A room without books is like a body without a soul.”  ― Marcus Tullius Cicero
      .show-for-large.large-3.columns
        img(src='/images/logo.jpg', alt='books')
      .medium-5.large-3.columns
        .callout.secondary
          form
            .row
              .small-12.columns
                label
                  input(type='text', placeholder='Harry Potter')
                button.expanded.button(type='submit') Search Book
              .small-12.columns
                label
                  input(type='text', placeholder='J.R.Rollings')
                button.expanded.button(type='submit') Search Author
    .row.column
      hr
      
      block content
            
    .row.column
      a.button.hollow.expanded Load More
    footer
      .row.expanded.callout.secondary
    script(src='https://cdn.jsdelivr.net/foundation/6.2.0/foundation.min.js')
    script(src='https://code.jquery.com/jquery-2.2.2.js')
    script(src='javascripts/client.js')
