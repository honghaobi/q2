div.form-group
  label(for="author") Author
  input.form-control(type="text" id="author" name="author" value= book.author placeholder="Author")
div.form-group
  label(for="title") Title
  input.form-control(type="text" id="title" name="title" value= book.title placeholder="Title")
div.form-group
  label Rate this book
  div.checkbox
    label
      input(type="radio" name="rating" value="1" checked=(book.rating == 1 || !book.rating))
      one 1 (Lame)
  div.checkbox
    label
      input(type="radio" name="rating" value="2" checked=(book.rating == 2))
      two 2
  div.checkbox
    label
      input(type="radio" name="rating" value="3" checked=(book.rating == 3))
      three 3
  div.checkbox
    label
      input(type="radio" name="rating" value="4" checked=(book ? (book.rating === 4 ? true : undefined): undefined))
      four 4 (Awesome)
div.form-group
  label(for="description") Description
  textarea.form-control(rows="5" name="description" id='description')= book.description
div.form-group
  button.btn.btn-primary(type="submit") Save
